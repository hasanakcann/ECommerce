{
  //Ocelot'un dağılımını yaptığı sayfalara UI'dan erişim sağlayabilmek için ServiceApiSettings'de tanımlar yapılır.
  "ServiceApiSettings": {
    "OcelotUrl": "http://localhost:5000",
    "IdentityServerUrl": "http://localhost:5001",
    "Catalog": {
      "Path": "services/catalog/"
    },
    "Discount": {
      "Path": "services/discount/"
    },
    "Order": {
      "Path": "services/order/"
    },
    "Cargo": {
      "Path": "services/cargo/"
    },
    "Basket": {
      "Path": "services/basket/"
    },
    "Comment": {
      "Path": "services/comment/"
    },
    "Payment": {
      "Path": "services/payment"
    },
    "Image": {
      "Path": "services/images"
    }
  },
  "ClientSettings": {
    "MultiShopVisitorClient": {
      "ClientId": "MultiShopVisitorId",
      "ClientSecret": "multishopsecret"
    },
    "MultiShopManagerClient": {
      "ClientId": "MultiShopManagerId",
      "ClientSecret": "multishopsecret"
    },
    "MultiShopAdminClient": {
      "ClientId": "MultiShopAdminId",
      "ClientSecret": "multishopsecret"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}