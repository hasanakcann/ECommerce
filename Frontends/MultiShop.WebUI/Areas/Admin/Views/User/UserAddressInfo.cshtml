@model GetCargoCustomerByIdDto

@{
    ViewData["Title"] = "UserAddressInfo";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <h3>Kullanıcı Adres ve İletişim Bilgisi</h3>
                    <div class="alert alert-info">Kullanıcı Id: @Model.CargoCustomerId</div>
                    <div class="alert alert-warning">Ad Soyad: @Model.Name @Model.Surname</div>
                    <div class="alert alert-danger">Email Adresi: @Model.Email</div>
                    <div class="alert alert-success">Telefon: @Model.Phone</div>
                    <div class="alert alert-info">İl / İlçe: @Model.City @Model.District</div>
                    <div class="alert alert-warning">Adres: @Model.Address</div>
                </div>
            </div>
        </div>
    </div>
</section>